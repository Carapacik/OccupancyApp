@model RoomTypeModel

@{
    ViewData["Title"] = "Название категории и количество интервалов";
}

<form asp-controller="Home" asp-action="RoomTypeSettings" method="post">
    @for (var i = 0; i < Model.RoomTypeName.Count; i++)
    {
        <div class="row form-group">
            <div class="col-md-6">
                <label asp-for="@Model.RoomTypeName[i]">Введите название категории</label>
                <input asp-for="@Model.RoomTypeName[i]" class="form-control" required placeholder="Названиие категории"/>
                <span asp-validation-for="@Model.RoomTypeName[i]" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="@Model.RoomRateLevelsCount[i]">Введите количесвто интервалов для категории</label>
                <input asp-for="@Model.RoomRateLevelsCount[i]" class="form-control" required placeholder="Количество"/>
                <span asp-validation-for="@Model.RoomRateLevelsCount[i]" class="text-danger"></span>
            </div>
        </div>
    }
    <button class="btn btn-dark" type="submit">Ввести названия типов </button>
</form>